#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

	int main(){
		
	setlocale(LC_ALL,"Portuguese");
		
	char nome;
	float sala, vendas, total;		
			
	printf("Digite o seu nome: \n");
	scanf("%c", &nome);
	
	printf("Digite o seu salário: \n");
	scanf("%f", &sala);
	
	printf("Digite o valor total de vendas feitas no mês: \n");
	scanf("%f", &vendas);
	fflush(stdin);
	
	
	total= sala + (vendas*0.15);
	
	
	printf("O valor total a receber esse mês é: %.2f", total);
	
	return 0;
	}
